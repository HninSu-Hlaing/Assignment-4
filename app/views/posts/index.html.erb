<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-md-auto">
      <h1>Post List</h1>
      <br>

      <%= link_to 'Create Post', new_post_path ,class: 'btn btn-primary btn-sm mb-3' ,
      data: { bs_toggle: 'modal', bs_target: '#newPostModal', remote:true}%>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Operation</th>
          </tr>
        </thead>

        <tbody id="postsTable">
          <% @posts.each do |post| %>
            <%= render 'post_row' , post: post %>
          <% end %>
        </tbody>
      </table>
         <%= link_to '<< Back', root_path ,class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>

<div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="newPostModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newPostModalLabel">Create New Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="newPostForm">
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editPostModal" tabindex="-1" aria-labelledby="editPostModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editPostModalLabel">Edit Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="editPostForm">
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="showPostModal" tabindex="-1" aria-labelledby="showPostModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showPostModalLabel">Post Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="showPostDetails">
      </div>
    </div>
  </div>
</div>

