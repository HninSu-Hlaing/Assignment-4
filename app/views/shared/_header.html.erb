<div class="container mt-5">
    <div class="row">
        <div class="col-2">
            <div class="row">
                <div class="col">
                    <p><%= link_to "Users" , users_path %></p>
                </div>
                <div class="col">
                    <p><%= link_to "Posts" , posts_path %></p>
                </div>   
            </div>
        </div>
        <div class="col-10">
          <% if current_user %>
            <div class="row">
              <div class="col-4">
                <p><strong>Logged in as :</strong> <%= current_user.email %></p>
              </div>
              <div class="col-2">
              <%= button_to "logout" , logout_path, method: :delete ,class: 'form-control btn-danger btn-sm ml-3'%>
              </div>
            </div>
          <% else %>
            <%= link_to 'Log in', login_path ,class: 'btn btn-primary' %>
          <% end %>
        </div>
    </div>
</div>