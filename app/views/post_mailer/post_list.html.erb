<h1 class="display-4">Post List</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <% end %>
        </tbody>
      </table>